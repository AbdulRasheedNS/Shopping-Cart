<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Admin Profile</h2>
                <form action="/admin/edit-profile" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{admin.Name}}">
                    <br>
                    <label for="">Email</label> : {{admin.Email}}
                    {{!-- <input type="text" name="Category" class="form-control" value="{{admin.Email}}"> --}}
                    <br><br>
                    <label for="">Profile Photo</label>
                    <img src="/admin-images/{{admin._id}}.jpg" style="width: 10rem;" alt="" id="imgView" class="p-3">
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)" >

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
                <br>
                <a href="/admin/change-password" class="btn btn-primary">Change Password</a>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>