<div class="row p-5">
    <div class="col-md-6 m-auto p-5">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2> <br><br>
            {{#if err}}
            <p class="error">{{err}}</p>
            {{/if}}
            <form action="/login" method="post">
                <!-- Email input -->
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" value="user@gmail.com"/>
                </div>

                <!-- Password input -->
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password" value="123"/>
                </div>
                <a href="/signup">Create New Account</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>