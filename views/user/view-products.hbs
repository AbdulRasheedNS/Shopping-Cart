<section>
    <div class="container mt-5" style="display: block; w">
        <div class="row">
            {{#each products}}
            <div class="">
                <div class="p-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="card" style="width: 15rem;height: 25rem;">
                        <div class="pl-3 pr-3" style="max-width: 100%; max-height:50%; height: 50%;">
                            <img class="card-img-top pt-3 m-auto" src="/product-images/{{this._id}}.jpg"
                                alt="Card image cap"
                                style="display: block; width: auto; max-width: 100%; max-height:100%; ">
                        </div>
                        <div class="card-body" style="max-width: 100%;  max-height:40%; height: 40%;">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <p>Rs: {{this.Price}}</p>
                        </div>
                        <div class="pl-3"
                            style="max-width: 100%;  max-height:10%; height: 10%; position: absolute; bottom: 3%;">
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

